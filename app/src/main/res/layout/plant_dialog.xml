<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@drawable/round_bg">

    <ImageView
        android:id="@+id/img_plant"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_plantName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/img_plant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="이름: "
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/uhbee_mysen_bold"/>

    <TextView
        android:id="@+id/tv_plantDate"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_plantName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="키운 날짜: "
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/uhbee_mysen_bold"/>

    <TextView
        android:id="@+id/tv_plantLanguage"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_plantDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="꽃말: "
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/uhbee_mysen_bold"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_plantLanguage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="닫기"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/uhbee_mysen_bold"/>


</RelativeLayout>